@page
@model TravelApp.Pages.Paises.CreatePaisDestinoModel

@{
    ViewData["Title"] = "Criar Novo Pa√≠s";
}

<div class="container mt-4">
    <h2 class="mb-4">@ViewData["Title"]</h2>

    <div class="col-md-6">
        <form method="post">
            <div class="form-group mb-3">
                <label asp-for="PaisDestino.Nome" class="control-label">Nome</label>
                <input asp-for="PaisDestino.Nome" class="form-control"/>
                <span asp-validation-for="PaisDestino.Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Criar</button>
                <a asp-page="/Cidades" class="btn btn-secondary">Voltar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial"/>
}

