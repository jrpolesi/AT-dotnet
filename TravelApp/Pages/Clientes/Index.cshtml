@page
@model TravelApp.Pages.Clientes.IndexModel

@{
    ViewData["Title"] = "Lista de Clientes";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>@ViewData["Title"]</h2>
        <a asp-page="./CreateCliente" class="btn btn-primary">
            Novo Cliente
        </a>
    </div>

    @if (!Model.Clientes.Any())
    {
        <partial name="_AlertMessage" model="@("Nenhum cliente cadastrado ainda.")"/>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-bordered table-hover">
                <thead>
                <tr>
                    <th>Nome</th>
                    <th>Email</th>
                </tr>
                </thead>
                <tbody>
                @foreach (var cliente in Model.Clientes)
                {
                    <tr>
                        <td>@cliente.Nome</td>
                        <td>@cliente.Email</td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    }
</div>
