@page
@model TravelApp.Pages.Clientes.CreateClienteModel

@{
    ViewData["Title"] = "Criar Novo Cliente";
}

<div class="container mt-4">
    <h2 class="mb-4">@ViewData["Title"]</h2>

    <div class="col-md-6">
        <form method="post">
            <div class="form-group mb-3">
                <label asp-for="Cliente.Nome" class="control-label">Nome</label>
                <input asp-for="Cliente.Nome" class="form-control"/>
                <span asp-validation-for="Cliente.Nome" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Cliente.Email" class="control-label">Email</label>
                <input asp-for="Cliente.Email" class="form-control" type="email"/>
                <span asp-validation-for="Cliente.Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary">Criar</button>
                <a asp-page="./Index" class="btn btn-secondary">Voltar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial"/>
}