@page
@using Microsoft.IdentityModel.Tokens
@model TravelApp.Pages.Reservas.IndexModel

@{
    ViewData["Title"] = "Reservas";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-page="Create">Nova Reserva</a>
</p>
@if (!Model.Reservas.Any())
{
    <partial name="_AlertMessage" model="@("Nenhuma reserva cadastrada ainda.")"/>
}
else
{
    <table class="table">
        <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Reservas[0].ClienteId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Reservas[0].PacoteTuristicoId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Reservas[0].DataReserva)
            </th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model.Reservas)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Cliente.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PacoteTuristico.Titulo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DataReserva)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.Id">Editar</a> |
                    <a asp-page="./Details" asp-route-id="@item.Id">Ver</a> |
                    <a asp-page="./Delete" asp-route-id="@item.Id">Remover</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
}

