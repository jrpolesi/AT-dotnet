@page
@model TravelApp.Pages.Reservas.CreateModel

@{
    ViewData["Title"] = "Criar Nova Reserva";
}

<h1>@ViewData["Title"]</h1>

<h4>Reserva</h4>
<hr/>
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div class="form-group mb-3">
                <label asp-for="Reserva.ClienteId" class="control-label"></label>
                <select asp-for="Reserva.ClienteId" class="form-control" asp-items="ViewBag.ClienteId">
                    <option value="">Selecione um cliente</option>
                </select>
                <span asp-validation-for="Reserva.ClienteId" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Reserva.PacoteTuristicoId" class="control-label"></label>
                <select asp-for="Reserva.PacoteTuristicoId" class="form-control" asp-items="ViewBag.PacoteTuristicoId">
                    <option value="">Selecione um pacote tur√≠stico</option>
                </select>
                <span asp-validation-for="Reserva.PacoteTuristicoId" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Reserva.DataReserva" class="control-label"></label>
                <input asp-for="Reserva.DataReserva" class="form-control" type="date"
                       min='@DateTime.Today.ToString("yyyy-MM-dd")'/>
                <span asp-validation-for="Reserva.DataReserva" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="submit" value="Criar" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Voltar</a>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
