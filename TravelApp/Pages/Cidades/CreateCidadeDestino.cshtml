@page
@model TravelApp.Pages.Cidades.CreateCidadeDestino

@{
    ViewData["Title"] = "Criar Nova Cidade";
}

<div class="container mt-4">
    <h2 class="mb-4">@ViewData["Title"]</h2>

    <div class="col-md-6">
        <form method="post">
            <div class="form-group mb-3">
                <label asp-for="CidadeDestino.Nome" class="control-label">Nome</label>
                <input asp-for="CidadeDestino.Nome" class="form-control"/>
                <span asp-validation-for="CidadeDestino.Nome" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="CidadeDestino.PaisDestinoId" class="control-label">País Destino</label>
                <select asp-for="CidadeDestino.PaisDestinoId" class="form-control" asp-items="Model.Paises">
                    <option value="">Selecione um país</option>
                </select>
                <span asp-validation-for="CidadeDestino.PaisDestinoId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Criar</button>
                <a asp-page="./Index" class="btn btn-secondary">Voltar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial"/>
}
